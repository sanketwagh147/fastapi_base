# =============================================================================
# BASE CONFIGURATION - Common settings across all environments
# =============================================================================
# This file is loaded first, then environment-specific files (.env_local,
# .env_dev, etc.) override these values.
#
# Environment-specific files: .env_local, .env_dev, .env_uat, .env_uatbiz,
#                             .env_preprod, .env_sanity, .env_prod
# =============================================================================

# Application Settings
APP_NAME=Eventually API
APP_VERSION=0.1.0

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_DRIVER=postgresql+asyncpg
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_RECYCLE=900
DATABASE_ECHO=false
DATABASE_TIMEOUT=30

# CORS Configuration
CORS_ALLOW_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_JSON_FORMAT=false

# FastAPI Configuration
FASTAPI_TITLE=Eventually API
FASTAPI_DESCRIPTION=Event management API
FASTAPI_VERSION=0.1.0
FASTAPI_DOCS_URL=/docs
FASTAPI_REDOC_URL=/redoc
FASTAPI_OPENAPI_URL=/openapi.json

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis Configuration
REDIS_PORT=6379
REDIS_TIMEOUT=5
REDIS_DB=0

# API Configuration
API_TIMEOUT=30
API_RATE_LIMIT=100

# Kubernetes Secrets Support
SECRETS_FOLDER_NAME=secrets
PROJECT_KEY=eventually
